<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F8F8F8"
    >

    <TextView
        android:id="@+id/tv_sol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_result"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"

        android:text=""
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="35dp"></TextView>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="60dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4F2F2"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="28dp"
                android:backgroundTint="@color/purple_500"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:backgroundTint="@color/purple_500"
                android:text="("
                android:id="@+id/button_openbracket"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/purple_500"
                android:layout_margin="12dp"
                android:text=")"
                android:id="@+id/button_closebracket"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="/"
                android:id="@+id/button_divide"
                android:backgroundTint="@color/purple_200"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="7"
                android:textSize="28dp"
                android:id="@+id/button_7"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="8"
                android:id="@+id/button_8"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="9"
                android:id="@+id/button_9"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="*"
                android:id="@+id/button_multiply"
                android:backgroundTint="@color/purple_200"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="4"
                android:textSize="28dp"
                android:id="@+id/button_4"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="5"
                android:id="@+id/button_5"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="6"
                android:id="@+id/button_6"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="+"
                android:id="@+id/button_add"
                android:backgroundTint="@color/purple_200"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="1"
                android:textSize="28dp"
                android:id="@+id/button_1"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="2"
                android:id="@+id/button_2"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="3"
                android:id="@+id/button_3"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="-"
                android:id="@+id/button_minus"
                android:backgroundTint="@color/purple_200"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="AC"
                android:backgroundTint="@color/purple_500"
                android:textSize="18dp"
                android:id="@+id/button_AC"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="0"
                android:id="@+id/button_0"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="."
                android:id="@+id/button_dot"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textColor="#FFFFFF"
                android:layout_margin="12dp"
                android:text="="
                android:id="@+id/button_equal"
                android:backgroundTint="@color/purple_200"
                android:textSize="28dp"></com.google.android.material.button.MaterialButton>




        </LinearLayout>





    </LinearLayout>

</RelativeLayout>